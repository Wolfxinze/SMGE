# n8n Configuration
# Copy this file to .env.n8n and update with your values

# Database Configuration
N8N_DB_NAME=n8n
N8N_DB_USER=n8n
N8N_DB_PASSWORD=change_this_password_in_production

# Basic Auth (optional - for production)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

# Webhook Configuration
N8N_WEBHOOK_URL=http://localhost:5678

# Encryption Key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=

# SMTP Configuration (optional - for user management)
N8N_SMTP_HOST=
N8N_SMTP_PORT=587
N8N_SMTP_USER=
N8N_SMTP_PASS=
N8N_SMTP_SENDER=noreply@yourdomain.com