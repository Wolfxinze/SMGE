# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Create a Supabase project at https://app.supabase.com
# These values can be found in your Supabase project settings

# Supabase Project URL
# Found in: Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anonymous Key (Public)
# Found in: Settings > API > anon/public key
# This key is safe to use in browser code
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InlvdXItcHJvamVjdC1yZWYiLCJyb2xlIjoiYW5vbiIsImlhdCI6MTYzMzAwMDAwMCwiZXhwIjoxOTQ4NTc2MDAwfQ.your-anon-key-signature

# Supabase Service Role Key (Private - Server-side only!)
# Found in: Settings > API > service_role key
# CRITICAL: Never expose this key in client code or commit to version control
# This key bypasses Row Level Security - use only in secure server environments
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InlvdXItcHJvamVjdC1yZWYiLCJyb2xlIjoic2VydmljZV9yb2xlIiwiaWF0IjoxNjMzMDAwMDAwLCJleHAiOjE5NDg1NzYwMDB9.your-service-role-key-signature

# Database Direct Connection (Optional - for migrations/admin tasks)
# Found in: Settings > Database > Connection string
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-0-region.pooler.supabase.com:5432/postgres

# Database Connection Pooler URL (For serverless environments)
# Found in: Settings > Database > Connection pooling > Connection string
# Append ?pgbouncer=true for transaction mode
DATABASE_POOLING_URL=postgresql://postgres.your-project-ref:your-password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true

# ====================================
# SUPABASE AUTH CONFIGURATION
# ====================================

# Site URL for redirects after authentication
# Must match the URL in Supabase Dashboard > Authentication > URL Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Redirect URLs for authentication flows
# Configure in Supabase Dashboard > Authentication > URL Configuration
NEXT_PUBLIC_AUTH_REDIRECT_TO=/dashboard
NEXT_PUBLIC_AUTH_ERROR_REDIRECT=/auth/error

# JWT Expiry Time (in seconds)
# Default: 3600 (1 hour)
SUPABASE_JWT_EXPIRY=3600

# Enable Email Confirmations
# Set to 'true' in production, 'false' for development
NEXT_PUBLIC_ENABLE_EMAIL_CONFIRMATION=false

# Magic Link Expiry (in seconds)
# Default: 3600 (1 hour)
MAGIC_LINK_EXPIRY=3600

# ====================================
# N8N INTEGRATION
# ====================================

# n8n Base URL
# Default: http://localhost:5678 for local development
N8N_URL=http://localhost:5678

# n8n API Key (optional - for API authentication)
# Generate in n8n UI: Settings > API
N8N_API_KEY=

# n8n Webhook Secret (for signature verification)
# Generate with: openssl rand -hex 32
N8N_WEBHOOK_SECRET=

# n8n Workflow IDs
# After creating workflows in n8n, add their IDs here
N8N_WORKFLOW_CONTENT_GENERATION=
N8N_WORKFLOW_BRAND_ANALYSIS=
N8N_WORKFLOW_POST_SCHEDULING=
N8N_WORKFLOW_ANALYTICS_COLLECTION=
N8N_WORKFLOW_ENGAGEMENT_AUTOMATION=

# ====================================
# AI SERVICES
# ====================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Replicate API Token (for Stable Diffusion)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_...

# ====================================
# OAUTH AUTHENTICATION PROVIDERS
# ====================================
# Configure these in Supabase Dashboard: Authentication > Providers
# Each provider needs to be enabled and configured with the credentials below

# Google OAuth
# Setup: https://console.cloud.google.com/apis/credentials
# Required scopes: email, profile
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
# Supabase callback URL (add to Google OAuth app):
# https://your-project-ref.supabase.co/auth/v1/callback

# Twitter/X OAuth 2.0
# Setup: https://developer.twitter.com/en/portal/dashboard
# Required permissions: Read, Write
TWITTER_OAUTH_CLIENT_ID=
TWITTER_OAUTH_CLIENT_SECRET=
# Supabase callback URL (add to Twitter app):
# https://your-project-ref.supabase.co/auth/v1/callback

# LinkedIn OAuth 2.0
# Setup: https://www.linkedin.com/developers/apps
# Required scopes: openid, profile, email
LINKEDIN_OAUTH_CLIENT_ID=
LINKEDIN_OAUTH_CLIENT_SECRET=
# Supabase callback URL (add to LinkedIn app):
# https://your-project-ref.supabase.co/auth/v1/callback

# Instagram Basic Display API (Facebook OAuth)
# Setup: https://developers.facebook.com/apps/
# Note: Instagram uses Facebook OAuth for authentication
FACEBOOK_OAUTH_CLIENT_ID=
FACEBOOK_OAUTH_CLIENT_SECRET=
# Supabase callback URL (add to Facebook app):
# https://your-project-ref.supabase.co/auth/v1/callback

# ====================================
# SOCIAL MEDIA APIs
# ====================================
# These are for API access after user authentication
# Different from OAuth credentials above

# Instagram (Meta) - Graph API
# For content posting and analytics after OAuth
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/auth/callback/instagram

# Twitter/X API v2
# For tweet posting and analytics after OAuth
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:3000/api/auth/callback/twitter

# LinkedIn API
# For post creation and company page management
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/auth/callback/linkedin

# TikTok API
# For video posting and analytics
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=http://localhost:3000/api/auth/callback/tiktok

# ====================================
# PAYMENT PROCESSING (Stripe)
# ====================================

STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ====================================
# APPLICATION SETTINGS
# ====================================

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT=false

# ====================================
# MONITORING (Optional)
# ====================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Vercel Analytics
VERCEL_ANALYTICS_ID=

# ====================================
# ADDITIONAL CONFIGURATION
# ====================================

# JWT Secret (for custom token generation if needed)
# Found in: Settings > API > JWT Settings > JWT Secret
# SUPABASE_JWT_SECRET=your-jwt-secret-here

# Storage Bucket URLs (when configured)
# NEXT_PUBLIC_SUPABASE_STORAGE_URL=https://your-project-ref.supabase.co/storage/v1

# ====================================
# SETUP INSTRUCTIONS
# ====================================
# 1. Copy this file to .env.local
# 2. Create a new Supabase project at https://app.supabase.com
# 3. Start n8n with docker-compose up
# 4. Replace all placeholder values with your actual values
# 5. Never commit .env.local to version control
# 6. Add .env.local to your .gitignore file